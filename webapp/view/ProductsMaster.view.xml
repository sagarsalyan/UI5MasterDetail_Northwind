<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="App.ProductDetails.controller.ProductsMaster"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>Products}" id="idMasterPage">
				<content>
					<SearchField liveChange="onSearch" width="100%"/>
					<!--<PullToRefresh id="pullToRefresh" refresh="handleRefresh"/>-->
					<ScrollContainer vertical="true">
						<List id="ProductList" items="{productsModel>/results}" mode="SingleSelectMaster" selectionChange="onProductSelect" includeItemInSelection="true">
							<ObjectListItem title="{productsModel>ProductName}" type="Active" number="{productsModel>ProductID}">
								<firstStatus>
									<ObjectStatus title="Price" text="{productsModel>UnitPrice}" state="{=${productsModel>UnitPrice} > 18 ? 'Error' : 'None' }"/>
								</firstStatus>
								<attributes>
									<ObjectAttribute title="Unit In Stock" text="{productsModel>UnitsInStock}"/>
									<ObjectAttribute title="Qty/Unit" text="{productsModel>QuantityPerUnit}"/>
								</attributes>
							</ObjectListItem>
						</List>
					</ScrollContainer>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>